@Library('common-jenkins-declarative@2.x.x') _
pipeline {
    agent {
        node { label 'agent' }
    }
    stages {
        stage('Build') {
            steps {
                gradleTask('build', false, '--no-parallel')
            }
        }
        stage('Test') {
            steps {
                gradleTask('test', false, '--no-parallel')
            }
        }
    }
}